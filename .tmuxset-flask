#!/bin/bash

# vMISC라는 이름을 가진 윈도우를 생성하고 vim을 실행시킵니다
#tmux new-session -s vMISC -d 
tmux new-window -d -n vFlask
tmux send-keys -t vFlask "vi --servername flask" Enter

# 수평분할을 25%로 합니다 
tmux split-window -d -t vFlask -v -p 25  #"workon misc"
#tmux select-window -d -t vMISC

#misc-3.6을 가리키게 합니다. pyenv와 virtualenvwrapper를 통해 python3.6을 설치해보았습니다
#tmux send-keys -t vMISC.1 "workon 3.4test" Enter
tmux send-keys -t vFlask.1 "workon flask" Enter
#tmux send-keys -t vMISC.0 ":Virtu" Tab Space "3.4test" Enter
tmux send-keys -t vFlask.0 ":Virtu" Tab Space "flask" Enter
tmux send-keys -t vFlask.0 ":cd .virtualenvs/flask/src" Enter
tmux send-keys -t vFlask.1 "cdv" Tab Enter "cd src" Enter "clear" Enter



#;cdvirtualenv;cd src"
# 기존 pane을 선택하고 VirtualEnv를 활성화시킵니다.
#tmux send-keys C-k
#tmux send-keys "vim"
#tmux send-keys ":VirtualEnvActivate misc"

# 새로 분할된 pane을 선택하고 해당(misc) virtualenv로 이동합니다
#tmux select-pane -t1

#tmux select-layout -t vMISC tiled

