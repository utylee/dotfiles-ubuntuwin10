#!/bin/bash

# vTRADER라는 이름을 가진 윈도우를 생성하고 vim을 실행시킵니다
#tmux new-session -s vTRADER -d 
tmux new-window -d -n vTRADER
# tmux send-keys -t vTRADER "vis" Enter
#tmux send-keys -t vTRADER "vi --servername trader" Enter

# 수평분할을 25%로 합니다 
tmux split-window -d -t vTRADER -v -p 25  #"workon misc"
#tmux select-window -d -t vTRADER
tmux send-keys -t vTRADER.1 "workon tyTrader-win" Enter
tmux send-keys -t vTRADER.0 "workon tyTrader-win" Enter
tmux send-keys -t vTRADER.0 "cdv" Tab Enter "cd src" Enter "clear" Enter
tmux send-keys -t vTRADER.0 "vi --servername trader" Enter
tmux send-keys -t vTRADER.0 ":Virtu" Tab Space "tyTrader-win" Enter
tmux send-keys -t vTRADER.0 ":cd ~/.virtualenvs/tyTrader-win/src" Enter


tmux send-keys -t vTRADER.1 "cdv" Tab Enter "cd src" Enter "clear" Enter



#;cdvirtualenv;cd src"
# 기존 pane을 선택하고 VirtualEnv를 활성화시킵니다.
#tmux send-keys C-k
#tmux send-keys "vim"
#tmux send-keys ":VirtualEnvActivate tyTrader"

# 새로 분할된 pane을 선택하고 해당(misc) virtualenv로 이동합니다
#tmux select-pane -t1

#tmux select-layout -t vTRADER tiled

